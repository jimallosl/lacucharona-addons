<odoo>
  <record id="lcc_menu_builder_wizard" model="ir.ui.view">
    <field name="name">lcc.menu.builder.wizard.form</field>
    <field name="model">lcc.menu.builder.wizard</field>
    <field name="arch" type="xml">
      <form string="Construir MenÃº">
        <group>
          <field name="template_id" readonly="1"/>
          <field name="order_id" readonly="1"/>
        </group>
        <separator string="Selecciona tus platos (solo en stock)"/>
        <field name="line_ids">
          <tree editable="bottom">
            <field name="category"/>
            <field name="min_qty"/>
            <field name="max_qty"/>
            <field name="candidate_ids" widget="many2many_tags" readonly="1"/>
            <field name="selection_ids" widget="many2many_tags"/>
          </tree>
        </field>
        <footer>
          <button string="Confirmar" type="object" class="btn-primary" name="action_confirm"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
