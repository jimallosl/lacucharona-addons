<!-- payment_redsys/views/redsys_templates.xml -->
<odoo>
  <data>

    <!-- Formulario de configuraciÃ³n en el backend -->
    <record id="view_payment_acquirer_form_redsys" model="ir.ui.view">
      <field name="name">payment.acquirer.form.redsys</field>
      <field name="model">payment.acquirer</field>
      <field name="inherit_id" ref="payment.view_payment_acquirer_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet/notebook/page[@name='credentials']" position="inside">
          <div attrs="{'invisible': [('provider', '!=', 'redsys')]}">
            <group string="Redsys Credentials">
              <field name="redsys_merchant_code"/>
              <field name="redsys_secret_key"/>
              <field name="redsys_terminal"/>
            </group>
          </div>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
